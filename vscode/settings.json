{
  "[css][scss]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": "explicit"
    },
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  "[gdscript]": {
    "editor.defaultFormatter": "EddieDover.gdscript-formatter-linter"
  },
  // "[html]": {
  //   "editor.defaultFormatter": "esbenp.prettier-vscode"
  // },
  "[javascript][typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  "[markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    }
  },
  // "[nj][njk][nunjucks][twig]": {
  //   "djlint.enableLinting": true,
  //   "djlint.profile": "nunjucks",
  //   "editor.defaultFormatter": "okitavera.vscode-nunjucks-formatter",
  //   "editor.formatOnSave": true
  // },
  // "[python]": {
  //   "editor.defaultFormatter": "ms-python.black-formatter",
  //   "editor.formatOnSave": true,
  //   "editor.formatOnType": true,
  //   "editor.tabSize": 4
  // },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp", // this was RuboCop until installing Shopify's Ruby extension pack
    "editor.formatOnSave": true,
    "editor.semanticHighlighting.enabled": true, // added when installing Shopify's Ruby extension pack
    "files.insertFinalNewline": true, // added when installing Shopify's Ruby extension pack
    "files.trimFinalNewlines": true, // added when installing Shopify's Ruby extension pack
    "files.trimTrailingWhitespace": true // added when installing Shopify's Ruby extension pack
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },
  "auto-close-tag.disableOnLanguage": [
    "typescript"
  ],
  "breadcrumbs.enabled": true,
  // "djlint.formatLanguages": [
  //   "jinja",
  //   "nj",
  //   "njk",
  //   "nunjucks",
  //   "twig",
  //   "handlebars",
  //   "hbs",
  //   "mustache"
  // ],
  // "djlint.ignore": [
  //   "H030",
  //   "H031"
  // ],
  "editor.cursorBlinking": "phase",
  "editor.fontFamily": "FiraCode Nerd Font, Menlo, Monaco, monospace",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.renderLineHighlightOnlyWhenFocus": true,
  "editor.renderWhitespace": "trailing",
  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 2,
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "files.associations": {
    "*.html": "html",
    "erb": "html",
    "html": "html",
    "html.erb": "html"
  },
  "githubPullRequests.pullBranch": "never",
  "gitlens.defaultDateFormat": "D MMMM YYYY, hh:mm",
  "gitlens.defaultDateShortFormat": "D MMM YYYY",
  "gitlens.defaultTimeFormat": "hh:mm",
  "gitlens.hovers.currentLine.over": "annotation",
  "godot_tools.editor_path": "/opt/homebrew/bin/godot",
  "godot_tools.gdscript_lsp_server_port": 6005, // needed for Godot 4 compatibility according to extension, but needs may have since changed
  "headwind.runOnSave": false,
  "indentRainbow.colors": [
    "rgba(38, 70, 83, 0.3)",
    "rgba(42, 157, 143, 0.3)",
    "rgba(233, 196, 106, 0.3)",
    "rgba(244, 162, 97, 0.3)",
    "rgba(231, 111, 81, 0.3)"
  ],
  "indentRainbow.errorColor": "rgba(128, 32, 32, 0.6)", // indicate nonstandard indentation
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 2,
  // "javascript.format.insertSpaceAfterConstructor": true,
  // "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "markdown-preview-github-styles.colorTheme": "light",
  "nunjucksFormat.newline": true,
  "playwright.reuseBrowser": true,
  "playwright.showTrace": false,
  "prettier.enable": false,
  "python.defaultInterpreterPath": "python3",
  "python.formatting.provider": "black",
  "randomThemeSwitcher.lastSwitchDay": 4,
  "randomThemeSwitcher.switchMode": "daily",
  "randomThemeSwitcher.themeList": [
    "2077",
    "Dracula Soft",
    "Dracula",
    "Eva Light",
    "fairyfloss",
    "Fluffy Theme",
    "Kay Light",
    "Nord Light Brighter",
    "Nord Light",
    "Nord",
    "Ooh! A Flower!",
    "Pink Candy Dark Warm",
    "Pink Candy Dark",
    "Pink Candy Light",
    "Pink Cat Boo",
    "Quiet Light",
    "Shades of Purple",
    "Tinacious Design (Light)",
    "Tinacious Design",
    "Witch Hazel Hypercolor",
    "Witch Hazel",
  ],
  "redhat.telemetry.enabled": false,
  "stylelint.validate": [
    "css",
    "scss"
  ],
  "terminal.integrated.fontFamily": "FiraCode Nerd Font, Menlo, Monaco, monospace",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // "typescript.validate.enable": false,
  "workbench.activityBar.location": "hidden",
  "workbench.colorTheme": "Tinacious Design",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right"
}